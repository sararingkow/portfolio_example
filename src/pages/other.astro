      <!-- Project 1 -->
      <div class="bg-gray-700 p-6 rounded-lg shadow hover:shadow-lg transition">
        <div class="h-[300px] bg-cover bg-center rounded-t-lg" style="background-image: url('/images/other_project1.webp');"></div>
