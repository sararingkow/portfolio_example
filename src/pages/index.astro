---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/global.css";
import Button from "../components/Button.astro";
---

<MainLayout
  title="Homepage"
  description="Portfolio of Sara Ringkow Petersen"
  ogtitle="SRP portfolio - homepage"
  ogdescription="Portfolio-site for Sara Ringkow Petersen"
