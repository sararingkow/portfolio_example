<script>
  const carouselItems = document.querySelectorAll("[data-carousel-item]");
  let currentIndex = 0;

  // Function to show the current item
  function showItem(index) {
    console.log(`Current Index: ${index}`); // Debugging log
    carouselItems.forEach((item, i) => {
      item.classList.toggle("hidden", i !== index); // Show/hide items
      item.setAttribute("data-carousel-item", i === index ? "active" : ""); // Set active attribute
    });
  }

  // Next button event
  document.querySelector("[data-carousel-next]").addEventListener("click", () => {
    currentIndex = (currentIndex + 1) % carouselItems.length; // Loop back to the start
    showItem(currentIndex);
  });

  // Previous button event
  document.querySelector("[data-carousel-prev]").addEventListener("click", () => {
    currentIndex = (currentIndex - 1 + carouselItems.length) % carouselItems.length; // Loop to the end
    showItem(currentIndex);
  });

  // Initialize the first item
  showItem(currentIndex);
</script>

<style>
  [data-carousel-prev]:hover span:last-child {
    transform: translateX(0); /* Moves the background to the center on hover */
  }

  [data-carousel-next]:hover span:last-child {
    transform: translateX(0); /* Moves the background to the center on hover */
  }
</style>
