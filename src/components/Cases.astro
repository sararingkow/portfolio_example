---

<!-- Carousel -->
<div class="carousel w-full">
  <ul class="carousel-track grid grid-cols-1 md:grid-cols-2 md:gap-20 gap-16 md:pb-16 pb-8">
    {
      projects.map((project) => (
        <div class="flex flex-col border border-gray-950 rounded-[5px] bg-gray-100 hover:bg-gray-200 hover:-translate-y-[2px] transition duration-300 ease-in-out">
          <img class="w-[600px] h-[400px] object-cover rounded-t-[5px] border-b border-gray-950" src={project.image} alt={project.name} />
          <div class="flex flex-col p-6 md:pt-12 pt-8">
            <hr class="border-gray-950 mb-3 md:w-[90%] w-full" />
            <h3 class="pt-5">{project.name}</h3>
            <h4 class="font-dense md:pb-3 pb-2 pt-1 text-gray-950">
              <span class="font-bold text-gray-950">Semester:</span> {project.semester}
            </h4>
            <hr class="border-gray-950 mb-8 mt-3 md:w-[90%] w-full" />
            <p class="pb-6 text-gray-950 max-w-lg mb-auto">{project.description}</p>
            <hr class="border-gray-950 mb-5 mt-3 md:w-[90%] w-full" />
            <div class="px-4 py-2 w-fit text-gray-50 border border-gray-950 bg-red-500 hover:bg-red-600 transition duration-300 ease-in-out">
              <a href={project.url} target="_blank" aria-label={ariaLabel} class="italic font-bold text-[14px] uppercase">
                Click here to see project
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </ul>
</div>
