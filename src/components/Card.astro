---
// src/components/Card.astro
const {
  url = null,
  image,
  titleMain, // First part of the title
  titleSub = "", // Second part of the title, optional
  description,
  ariaLabel = "",
} = Astro.props;
---

{
  url ? (
    <a href={url} target="_blank" aria-label={ariaLabel} class="group">
      <div class="bg-blue-700 p-6 rounded-[5px] shadow-drop25 hover:-translate-y-1 transition duration-500 group-hover:bg-blue-500">
        <div class="h-[300px] bg-cover bg-center rounded-t-[5px]" style={`background-image: url(${image});`} />
        <h3 class="text-2xl font-semibold text-gray-50 mt-4">
          {titleMain}
          <br />
          {titleSub}
        </h3>
        <p class="text-gray-200 mt-2 leading-7">{description}</p>
      </div>
    </a>
  ) : (
    <div class="bg-blue-700 p-6 rounded-[5px] shadow-drop25 hover:-translate-y-1 transition duration-500 group-hover:bg-blue-500">
      <div class="h-[300px] bg-cover bg-center rounded-t-[5px]" style={`background-image: url(${image});`} />
      <h3 class="text-2xl font-semibold text-gray-50 mt-4">
        {titleMain}
        <br />
        {titleSub}
      </h3>
      <p class="text-gray-200 mt-2 leading-7">{description}</p>
    </div>
  )
}
