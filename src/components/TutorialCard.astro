---
// Props
const { title, subtitle, subtitleBreak = false, description, link, ariaLabel, extraSpacing = false } = Astro.props;
---

<div class="bg-gray-700 bg-opacity-80 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
  <h3 class="text-2xl font-semibold text-grey-500">
    {title}
    {
      subtitleBreak ? (
        <>
          <br />
          <em class="text-grey-500">({subtitle})</em>
        </>
      ) : (
        <em class="text-grey-600"> ({subtitle})</em>
      )
    }
  </h3>
  <p class="mt-6 text-grey-600">{description}</p>
  {
    extraSpacing && (
      <>
        <br />
      </>
    )
  }
  <a
    href={link}
    target="_blank"
    aria-label={ariaLabel}
    class="text-sm mt-6 mb-2 inline-block text-red-500 hover:text-grey-500 border border-red-500 hover:bg-red-500 transition duration-300 px-4 py-2 rounded-lg uppercase"
  >
    Read more
  </a>
</div>
