---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "relative z-10 font-bold rounded-[5px] text-sm px-6 py-3 transition duration-300 uppercase hover:shadow-drop25";

const variantClasses = {
  primary: "text-grey-50 bg-red-500 hover:bg-red-600",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-md",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>
